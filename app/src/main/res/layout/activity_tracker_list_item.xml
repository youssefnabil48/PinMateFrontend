<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.saraelsheemi.pinmate.controllers.MLRoundedImageView
        android:id="@+id/img_tracker_friend"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/male_user_profile_picture" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txt_tracker_friend_name"
        android:layout_toEndOf="@id/img_tracker_friend"
        android:layout_below="@id/txt_notf_req_title"
        android:layout_marginTop="25dp"
        android:text="Friend Name"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textColor="#747B80" />
    <TextView
        android:id="@+id/tracker_src"
        android:layout_below="@id/txt_tracker_friend_name"
        android:text="Source"
        android:layout_toEndOf="@id/img_tracker_friend"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tracker_dst"
        android:layout_below="@id/txt_tracker_friend_name"
        android:text="Destination"
        android:layout_toEndOf="@id/tracker_src"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/open"
        android:src="@drawable/baseline_navigate_next_black_36dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@id/txt_tracker_friend_name"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>