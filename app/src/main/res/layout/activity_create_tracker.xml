<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:background="@drawable/newrequestshape"
    android:layout_width="250dp"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/line"
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingTop="5dip"
        android:layout_below="@id/txt_create_hangout"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#747B80" />

    <TextView
        android:id="@+id/txt_create_hangout"
        android:text="Create Tracker"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="#747B80"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinner_src"
        android:layout_below="@id/line"
        android:background="@drawable/rounded_corner_white"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#747B80"
        android:spinnerMode="dialog"
        android:layout_height="25dp">

    </Spinner>

    <Spinner
        android:id="@+id/spinner_dst"
        android:layout_below="@id/spinner_src"
        android:background="@drawable/rounded_corner_white"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#747B80"
        android:spinnerMode="dialog"
        android:layout_height="25dp">

    </Spinner>


    <Button
        android:id="@+id/btn_start"
        android:text="Start"
        style="@style/LoginButton"
        android:layout_below="@id/spinner_dst"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/round_corner"
        android:layout_width="100dp"
        android:layout_height="40dp" />

</RelativeLayout>