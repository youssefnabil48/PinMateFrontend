<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.saraelsheemi.pinmate.controllers.MLRoundedImageView
        android:id="@+id/hngoutpic"
        android:layout_marginTop="45dp"
        android:layout_width="50dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/placeprofile"
        android:layout_height="50dp" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txt_hangout_title"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@id/hngoutpic"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Hangout Request Title"
        android:textColor="@android:color/black" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txt_post_date"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
       android:layout_alignParentEnd="true"
        android:text="Date"
        android:textColor="@android:color/black" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txt_hangout_description"
        android:layout_below="@id/txt_hangout_title"
        android:layout_marginTop="6dp"
        android:layout_alignStart="@id/txt_hangout_title"
        android:layout_marginBottom="10dp"
        android:text="description"
        android:textColor="@android:color/black" />


</RelativeLayout>