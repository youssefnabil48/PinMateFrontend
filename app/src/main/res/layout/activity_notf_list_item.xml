<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_notf_friend"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:src="@drawable/male_user_profile_picture" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txt_notf_friend_name"
        android:layout_toEndOf="@id/img_notf_friend"
        android:layout_marginTop="35dp"
        android:text="Friend Name"
        android:textColor="@android:color/black" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txt_notf_date"
        android:layout_marginTop="10dp"
         android:layout_below="@id/txt_notf_friend_name"
        android:layout_alignStart="@id/txt_notf_friend_name"
        android:text="Date"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_notf_accept"
        android:text="Accept"
        style="@style/LoginButton"
        android:layout_alignParentEnd="true"
       android:layout_marginTop="35dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/round_corner"
        android:layout_width="70dp"
        android:layout_height="35dp" />

    <Button
        android:id="@+id/btn_notf_decline"
        android:text="Decline"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="35dp"
        android:textAllCaps="false"
        android:background="@drawable/rounded_corner_white"
        android:textColor="@color/colorPrimary"
        android:layout_width="70dp"
        android:layout_height="35dp" />
</RelativeLayout>