<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
    android:id="@+id/search_item_id"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="invisible"/>

    <TextView
        android:id="@+id/search_item_type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/search_item_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:src="@drawable/placeprofile" />

    <TextView
        android:id="@+id/search_item_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/search_item_picture"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:text="Name"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/search_item_hint"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/search_item_name"
        android:layout_alignStart="@id/search_item_name"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:text="Description"
        android:textColor="#747B80" />

</RelativeLayout>