<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/baseline_info_black_24dp"
        android:id="@+id/img_placep_name_icon"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/txt_placep_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_placep_name"
        android:text="Description"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/baseline_phone_black_24dp"
        android:id="@+id/img_place_phone_icon"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/txt_place_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_place_phone"
        android:layout_below="@id/txt_placep_name"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:text="Place Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/placeholde_black_24"
        android:id="@+id/img_placep_address_icon"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/txt_place_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_place_address"
        android:layout_below="@id/txt_place_phone"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>